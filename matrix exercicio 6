#include <stdio.h>
#include <stdlib.h>
#include <math.h>

/*
6) Fa√ßa um programa que gere a matriz quadrada de ordem 4,  
conforme mostrado a seguir:

  4 9 16 25
  9 16 25 36
  16 25 36 49
  25 36 49 64

*/

int main()
{
   int num = 2;
   int matrix[4][4];
   int save = 0;
   
   for(int i = 0; i < 4; i++) {
      for(int j = 0; j < 4; j++) {
         matrix[i][j] = pow(num,2);
         num++;
         if(j == 0) {
            save = num;
         }
      }
      num = save;
   }
   
   printf("printing the matrix:\n");
   
   for(int i = 0; i < 4; i++) {
      for(int j = 0; j < 4; j++) {
         printf("%d \t",matrix[i][j]);
      }
      printf("\n");
   }

    return 0;
}
