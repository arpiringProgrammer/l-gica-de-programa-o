#include <stdio.h>
#include <stdlib.h>
#include <math.h>

/*
6) Fa√ßa um programa que gere a matriz quadrada de ordem 4,  
conforme mostrado a seguir:

  0  -1  -2  -3
  1  0  -1  -2
  2  1  0  -1
  3  2  1  0

*/

int main()
{
   int num = 0;
   int matrix[4][4];
   int save = 0;
   
   for(int i = 0; i < 4; i++) {
      for(int j = 0; j < 4; j++) {
         matrix[i][j] = num;
         num--;
         if(j == 1) {
            save++;
         }
      }
      num = save;
   }
   
   printf("printing the matrix:\n");
   
   for(int i = 0; i < 4; i++) {
      for(int j = 0; j < 4; j++) {
         printf("%d \t",matrix[i][j]);
      }
      printf("\n");
   }

    return 0;
}
